{
    "name": "author-template/php-package-template",
    "description": "PHP template package boilerplate",
    "keywords": [
        "AlanD20",
        "author-template",
        "php-package-template"
    ],
    "homepage": "https://github.com/author-template/php-package-template",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "AlanD20",
            "email": "aland20@pm.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "illuminate/testing": "^10.29",
        "laravel/pint": "^1.13",
        "pestphp/pest": "^2.24.0",
        "phpunit/phpunit": "^10.4.0"
    },
    "autoload": {
        "psr-4": {
            "AuthorTemplate\\PhpPackageTemplate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AuthorTemplate\\PhpPackageTemplate\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage-html coverage",
        "format": "vendor/bin/pint src tests --config pint.json"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev"
}
